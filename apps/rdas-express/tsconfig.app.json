{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "es2023",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "../../dist/out-tsc",
    "types": ["node"]
  },
  "exclude": ["vite.config.mts", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
