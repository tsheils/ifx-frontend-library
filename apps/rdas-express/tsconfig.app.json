{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "../../dist/out-tsc",
    "types": ["node", "express"]
  },
  "exclude": ["vite.config.mts", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.ts"]
}
